<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

  <bean id="luxoftCompany" class="com.luxoft.springioc.example08.Company">
    <constructor-arg value="Luxoft"/>
  </bean>

  <bean id="smithPerson" class="com.luxoft.springioc.example08.Person">
    <constructor-arg name="name" value="John Smith"/>
    <constructor-arg name="company" ref="luxoftCompany"/>
  </bean>

</beans>
